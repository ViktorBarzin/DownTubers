<Window x:Class="UserInterface.Startup.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface.Startup"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Title="Startup" 
        Height="320.769" 
        Width="499.615">
    <Grid Style="{DynamicResource BackGroundTheme}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Width="30"
                Height="25"
                Margin="3,10,0,38" 
                RenderTransformOrigin="0.505,0.437"
                FontSize="16"
                Content="◐"
                x:Name="BtnStartUpChangeTheme"
                Style="{DynamicResource ButtonStyle}"
                Click="BtnStartUpChangeTheme_OnClick"/>
        <Label Grid.Row="0" 
               Grid.Column="0" 
               Grid.ColumnSpan="3" 
               Content="Welcome to Downtubers Video Sharing Application" 
               HorizontalAlignment="Center" 
               FontSize="18"
               Style="{DynamicResource LabelStyle}"/>
        <Label Grid.Row="1" 
               Grid.Column="1" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Content="Username:" 
               FontSize="12"
               Style="{DynamicResource LabelStyle}"/>
        <TextBox x:Name="TxtUsername" 
                 Grid.Row="1" 
                 Grid.Column="2" 
                 VerticalAlignment="Center" 
                 Margin="0 0 20 0"
                 Style="{DynamicResource TextBoxStyle}"/>
        <Label Grid.Row="2" 
               Grid.Column="1" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Content="Password:" 
               FontSize="12"
               Style="{DynamicResource LabelStyle}"/>
        <PasswordBox x:Name="TxtPassword" 
                     Grid.Row="2" 
                     Grid.Column="2" 
                     VerticalAlignment="Center" 
                     Margin="0 0 20 0"
                     Style="{DynamicResource PasswordBoxStyle}"/>

        <Image Grid.Row="1" 
               Grid.Column="0" 
               Grid.RowSpan="2" 
               Source="http://i.imgur.com/XDs60og.png"/>
        <Button x:Name="BtnRegister" 
                Grid.Row="3" 
                Grid.Column="1" 
                Margin="30 25 30 25" 
                Content="Register" 
                Click="BtnRegister_OnClick"
                Style="{DynamicResource ButtonStyle}"/>
        <Button x:Name="BtnLogin" 
                Grid.Row="3" 
                Grid.Column="2" 
                Margin="30 25 30 25" 
                Content="Login" 
                Click="BtnLogin_OnClick"
                Style="{DynamicResource ButtonStyle}"/>
    </Grid>
</Window>
