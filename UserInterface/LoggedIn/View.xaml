                               Background="AntiqueWhite"
                               TextBlock.FontSize="30"
                               Style="{DynamicResource LabelStyle}">
                                Hardwell on Air - 2016 (mix gatso batso) edni neshto
                            </Label>
=======
                                FontSize="20"/>-->
                            <!--<Label Grid.Row="3" 
                                   Grid.Column="1" 
                                   Grid.ColumnSpan="2" 
                                   x:Name="LblMainVideoCaption" 
                                   Background="AntiqueWhite"
                                   TextBlock.FontSize="30"
                                   Content="Hardwell on Air - 2016 (mix gatso batso) edni neshto"/>-->
                        </Grid>
                        <!--RelatedVideos-->
                        <Grid Grid.Column="2" 
                          Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>
                            <ListView Grid.Row="0" 
                                  x:Name="LvlMainFirstVideo"
                                  Style="{DynamicResource ListViewStyle}">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                        </Grid>
                        <!--Player-->
                        <Grid Grid.Column="1" 
                          Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="49*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30*"/>
                                <RowDefinition/>
                                <RowDefinition Height="3*"/>
                            </Grid.RowDefinitions>
                            <vlc:VlcControl Grid.Column="1" 
                                        x:Name="Player"/>
                            <Grid Grid.Row="2" 
                              Grid.Column="1" 
                              x:Name="PlayerControls">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="8*"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="BtnPause" 
                                    Click="BtnPause_OnClick"
                                    Content="❚❚"
                                    FontSize="20"
                                    Style="{DynamicResource ButtonStyle}"/>
                                <Slider x:Name="SdrVolume" 
                                    Grid.Column="1" 
                                    VerticalAlignment="Center" 
                                    Minimum="0"
                                    Maximum="100"
                                    Value="100"
                                    ValueChanged="SdrVolume_OnValueChanged"
                                    Margin="10,6,10,2" Height="18"/>
                                <Slider x:Name="SdrPlayback" 
                                    Grid.Column="2" 
                                    VerticalAlignment="Center"
                                    Minimum="0"
                                    Maximum="1"
                                    Margin="10,4,10,0"
                                    Height="18"
                                    Value="{Binding MediaPlayer.Position, Mode=TwoWay, ElementName=Player}"/>
                                <Button x:Name="BtnFullscreen" 
                                    Grid.Column="3"
                                    Content="❐"
                                    FontSize="20"
                                    Style="{DynamicResource ButtonStyle}"/>
                                <Button Grid.Column="5"
                                    Content="⬇"
                                    FontSize="30"
                                    x:Name="BtnMainDownload"
                                        
                                        Click="BtnMainDownload_OnClick"
                                    Style="{DynamicResource ButtonStyle}"/>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid x:Name="GrdMainStartScreen">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Column="0" 
                          Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="7*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="16*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="15*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="15*"/>
                                <ColumnDefinition Width="60*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="2" 
                                Grid.Row="1"
                                Content="⏏"
                                FontSize="20"
                                x:Name="BtnMainGoHome"
                                Style="{DynamicResource ButtonStyle}">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="Home"/>
                                            <TextBlock Text="Click to go to the home page"/>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                            <Button Grid.Column="4"
                                Grid.Row="1"
                                Content="◐"
                                FontSize="20"
                                x:Name="BtnMainChangeTheme" 
                                
                                Style="{DynamicResource ButtonStyle}">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="Themes"/>
                                            <TextBlock Text="Click to switch themes"/>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                        </Grid>
                        <Grid Grid.Row="0" 
                          Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*"/>
                                <RowDefinition Height="4*"/>
                                <RowDefinition Height="5*"/>
                                <RowDefinition Height="7*"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="15*"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Row="1" 
                                 Grid.Column="1"
                                 x:Name="TxtMainSearch"
                                 FontSize="20"
                                 Style="{DynamicResource TextBoxStyle}"/>
                            <Button Grid.Column="2" 
                                Grid.Row="1"
                                x:Name="BtnMainSearch"
                                Content="🔍"
                                FontSize="20"
                                Click="BtnMainSearch_OnClick"
                                Style="{DynamicResource ButtonStyle}">
                                <Button.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="Search"/>
                                            <TextBlock Text="Click to search a video"/>
                                        </StackPanel>
                                </ToolTip>
                            </Button.ToolTip>
                            </Button>
                        </Grid>
                        <Grid Grid.Column="2" 
                          Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="7.5*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="60*"/>
                                <ColumnDefinition Width="15*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="15*"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="4" 
                                Grid.Row="1"
                                Content="⊝"
                                FontSize="20"
                                x:Name="BtnMainLogOut"
                                Style="{DynamicResource ButtonStyle}">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="Log out"/>
                                            <TextBlock Text="Click to log out"/>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                            <Button Grid.Column="2"
                                Grid.Row="1"
                                Content="≜"
                                FontSize="30"
                                x:Name="BtnMainUpload"
                                Style="{DynamicResource ButtonStyle}"
                                Click="BtnMainUpload_OnClick">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="Upload"/>
                                            <TextBlock Text="Click to upload a video"/>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                        </Grid>
                        <ListView Grid.Column="1"
                                  Grid.Row="1"
                                  x:Name="LsvMainSearchResults"
                                  Style="{DynamicResource ListViewStyle}"
                                  ItemsSource="{Binding VideoSearchResults}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="100" 
                                               Height="60" 
                                               Source="{Binding ThumbnailSource}"/>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition Height="2*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock FontSize="25" 
                                                       FontWeight="Bold" 
                                                       Text="{Binding Title}"
                                                       Grid.Row="0"/>
                                            <TextBlock FontSize="14.5" 
                                                       FontWeight="SemiBold"
                                                       Text="{Binding Description}"
                                                       Grid.Row="1"/>
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Name="ProfileTab" 
                     Header="MY PROFILE">
                <Grid Style="{DynamicResource BackGroundTheme}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="4.8*"/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="30*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" 
                               Grid.Row="0"
                               x:Name="ImgProfileUserLogo">
                        </Image>
                        <TextBox Grid.Row="1"
                                 Grid.Column="1"
                                 x:Name="TxtProfileUserInfo"
                                 TextWrapping="Wrap"
                                 IsReadOnly="True"
                                 FontSize="16"
                                 BorderThickness="0"
                                 Style="{DynamicResource TextBoxStyle}"/>
                        <Grid Grid.Row="2"
                              Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Row="1"
                                    Grid.Column="1"
                                    Width="70"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    x:Name="BtnProfileEdit"
                                    Content="Edit"
                                    FontSize="16"
                                    Click="BtnProfileEdit_OnClick"
                                    Style="{DynamicResource ButtonStyle}"/>
                            <Button Grid.Row="1"
                                    Grid.Column="0"
                                    Width="70"
                                    Height="35"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    x:Name="BtnProfileLogOut"
                                    Content="Log Out"
                                    FontSize="16"
                                    Click="BtnProfileEdit_OnClick"
                                    Style="{DynamicResource ButtonStyle}"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="12*"/>
                            <RowDefinition Height="12*"/>
                            <RowDefinition Height="12*"/>
                            <RowDefinition Height="12*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="3*"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="1"
                                   x:Name="LblProfileDescription"
                                   FontSize="18"
                                   BorderThickness="2"
                                   Style="{DynamicResource LabelStyle}"/>
                            <Label Grid.Row="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   x:Name="LblProfileUserDescription"
                                   Content="Description"
                                   Style="{DynamicResource LabelStyle}"/>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="3*"/>
                            </Grid.RowDefinitions>
                            <ListView Grid.Row="1"
                                      x:Name="LsvProfilePlayLists"
                                      Style="{DynamicResource ListViewStyle}">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                            <Label Grid.Row="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   x:Name="LblProfilePlaylists"
                                   Content="PlayLists"
                                   Style="{DynamicResource LabelStyle}"/>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="3*"/>
                            </Grid.RowDefinitions>
                            <ListView Grid.Row="1" 
                                      x:Name="LsvProfileUploadedVideos"
                                      Style="{DynamicResource ListViewStyle}">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                            <Label Grid.Row="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   x:Name="LblProfileUploadedVideos"
                                   Content="Uploaded Videos"
                                   Style="{DynamicResource LabelStyle}"/>
                        </Grid>
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="3*"/>
                            </Grid.RowDefinitions>
                            <ListView Grid.Row="1" 
                                      x:Name="LsvProfileLikedVideos"
                                      Style="{DynamicResource ListViewStyle}">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                            <Label Grid.Row="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   x:Name="LblProfileLikedVideos"
                                   Content="Liked Videos"
                                   Style="{DynamicResource LabelStyle}"/>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Name="Admin"
                     Header="ADMINISTRATOR">
                <Grid Style="{DynamicResource BackGroundTheme}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.ColumnSpan="3" 
                          Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" 
                               Grid.Row="0" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontSize="30"
                               Content="User Search"
                               Style="{DynamicResource LabelStyle}"/>
                        <Label Grid.Column="1"
                               Grid.Row="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="30"
                               Content="Video Search"
                               Style="{DynamicResource LabelStyle}"/>
                        <TextBox Grid.Column="0" 
                                 Grid.Row="1"
                                 BorderThickness="1"
                                 Height="25"
                                 Width="220"
                                 VerticalAlignment="Top"
                                 FontSize="16"
                                 x:Name="TxtAdminUserSearch"
                                 Style="{DynamicResource TextBoxStyle}"/>
                        <TextBox Grid.Column="1"
                                 Grid.Row="1"
                                 BorderThickness="1"
                                 Height="25"
                                 Width="220"
                                 VerticalAlignment="Top"
                                 FontSize="16"
                                 x:Name="TxtAdminVideoSearch"
                                 Style="{DynamicResource TextBoxStyle}">
                            <TextBox.Background>
                                <SolidColorBrush 
                                    Color="AliceBlue"
                                    Opacity="0.3"/>
                            </TextBox.Background>
                        </TextBox>
                        <Button Grid.Column="0"
                                Grid.Row="1"
                                Width="120"
                                Height="25"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Center"
                                x:Name="BtnAdminUserSearch"
                                Click="BtnUserSearch_OnClick"
                                Style="{DynamicResource ButtonStyle}"
                                Content="Search"/>
                        <Button Grid.Column="1"
                                Grid.Row="1"
                                Width="120"
                                Height="25"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Center"
                                x:Name="BtnAdminVideoSearch"
                                Content="Search"
                                Style="{DynamicResource ButtonStyle}"/>
                    </Grid>
                    <Grid Grid.Column="0"
                          Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="9*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ListView Grid.Column="1"
                                  Grid.Row="0"
                                  x:Name="LsvAdminUsers"
                                  Style="{DynamicResource ListViewStyle}"/>
                    </Grid>
                    <Grid Grid.Column="1"
                          Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="9*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ListView Grid.Column="1"
                                  Grid.Row="0"
                                  x:Name="LsvAdminVideos"
                                  Style="{DynamicResource ListViewStyle}"/>
                    </Grid>
                    <Grid Grid.Column="2"
                          Grid.Row="0"
                          Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="12*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <DataGrid Grid.Column="1"
                                  Grid.Row="2"
                                  x:Name="DtgAdminResult"
                                  Style="{DynamicResource DataGridStyle}">
                            <DataGrid.Background>
                                <SolidColorBrush 
                                    Color="AliceBlue"
                                    Opacity="0.3"/>
                            </DataGrid.Background>
                        </DataGrid>
                        <Grid Grid.Row="3"
                              Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="8*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    Width="60"
                                    Height="25"
                                    x:Name="BtnAdminCancel"
                                    Content="Cancel"
                                    Style="{DynamicResource ButtonStyle}"/>
                            <Button Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Width="60"
                                    Height="25"
                                    x:Name="BtnAdminSave"
                                    Content="Save"
                                    Style="{DynamicResource ButtonStyle}"/>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
